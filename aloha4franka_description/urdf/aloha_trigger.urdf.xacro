<?xml version="1.0"?>
<robot name="aloha_trigger" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find aloha4franka_description)/urdf/aloha_trigger.ros2_control.urdf.xacro" />

  <!--<xacro:arg name="use_dummy" default="false" />-->
  <xacro:arg name="device" default="/dev/ttyUSB0" />

  <link name="trigger_link"/>

  <joint type="revolute" name="trigger_joint">
      <parent link="gripper_base"/>
      <child link="trigger_link"/>
      <limit lower="0.0" upper="0.5" effort="20" velocity="0.1"/>
  </joint>


  <xacro:aloha_trigger_ros2_control name="aloha_trigger_ros2_control" use_dummy="false" device="$(arg device)"/>
</robot>
